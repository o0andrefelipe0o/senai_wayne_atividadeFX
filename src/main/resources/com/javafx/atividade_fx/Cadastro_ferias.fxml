<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javafx.atividade_fx.Controller.CadastroFerias"
            prefHeight="400.0" prefWidth="600.0">

        <children>
            <Label layoutX="30" layoutY="20" text="Cadastro de Férias"/>
            <Label layoutX="30" layoutY="60" text="Funcionário ID:"/>
            <TextField fx:id="funcionarioIdField" layoutX="150" layoutY="55" prefWidth="300"/>

            <Label layoutX="30" layoutY="100" text="Data Início:"/>
            <DatePicker fx:id="dataInicioPicker" layoutX="150" layoutY="95" prefWidth="200"/>

            <Label layoutX="30" layoutY="140" text="Data Fim:"/>
            <DatePicker fx:id="dataFimPicker" layoutX="150" layoutY="135" prefWidth="200"/>

            <Label layoutX="30" layoutY="180" text="Observação:"/>
            <TextArea fx:id="observacaoArea" layoutX="150" layoutY="175" prefWidth="300" prefHeight="100"/>

            <Button text="Salvar" layoutX="200" layoutY="300" onAction="#salvarFerias"/>
        </children>
</AnchorPane>
